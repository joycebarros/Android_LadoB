<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.FazerPedidoActivity">

    <ImageView
        android:id="@+id/imag_gravata"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_gravata"
        tools:layout_editor_absoluteX="141dp" />

    <TextView
        android:id="@+id/txt_ResumoPedidos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="Pedidos"
        android:textColor="#EF4C40"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="110dp"></TextView>

    <ImageView
        android:id="@+id/imag_voltar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_resposta" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_productsPedido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="164dp" />

    <TextView
        android:id="@+id/txt_AddMais"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="Adicionar mais itens"
        android:textColor="#EF4C40"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/rv_productsPedido"></TextView>

    <Button
        android:id="@+id/btFecharConta"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:background="#EF4C40"
        android:text="Fazer Pedido"
        android:textColor="#F8F6FA"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="451dp" />

    <TextView
        android:id="@+id/tv_totalPedido"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Total do Pedido:"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_AddMais" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="83dp">

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>